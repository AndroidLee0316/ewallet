<?xml version="1.0" encoding="utf-8"?>
<com.pasc.business.ewallet.widget.roundview.RoundLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    app:ewallet_rv_cornerRadius="6dp"
    app:ewallet_rv_backgroundColor="#FFFFFF"
    android:paddingTop="16dp">

    <com.pasc.business.ewallet.widget.roundview.RoundTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:textColor="#333333"
        android:gravity="center"
        android:visibility="gone"
        android:text="标题" />

    <com.pasc.business.ewallet.widget.roundview.RoundTextView
        android:id="@+id/tv_content"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"
        android:text="提示文字"
        android:textColor="#333333"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#E0E0E0 " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <com.pasc.business.ewallet.widget.roundview.RoundTextView
            android:id="@+id/tv_button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ewallet_widget_selector_button_common"
            android:gravity="center"
            android:text="@string/ewallet_cancel"
            android:textColor="#666666"
            android:textSize="18sp" />

        <View
            android:visibility="gone"
            android:id="@+id/v_divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#E0E0E0" />

        <com.pasc.business.ewallet.widget.roundview.RoundTextView
            android:visibility="gone"
            android:id="@+id/tv_button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ewallet_widget_selector_button_common"
            android:gravity="center"
            android:text="确认"
            android:textColor="#666666"
            android:textSize="18sp" />
    </LinearLayout>
</com.pasc.business.ewallet.widget.roundview.RoundLinearLayout>