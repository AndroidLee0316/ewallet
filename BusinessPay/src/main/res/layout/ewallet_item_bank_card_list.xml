<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/ewallet_white_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ewallet_item_balance_list_height"
        android:paddingLeft="@dimen/ewallet_item_balance_list_padding_left"
        android:paddingTop="@dimen/ewallet_item_bank_card_padding_top"
        android:paddingBottom="@dimen/ewallet_item_bank_card_padding_top">
        
        <ImageView
            android:id="@+id/ewallet_item_bank_card_list_icon_iv"
            android:layout_width="@dimen/ewallet_item_bank_card_icon_width"
            android:layout_height="@dimen/ewallet_item_bank_card_icon_width"
            android:layout_centerVertical="true"
            android:src="@drawable/ewallet_ic_no_bank_card"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/ewallet_item_bank_card_list_icon_iv"
            android:layout_marginLeft="@dimen/ewallet_item_bank_card_title_padding_left">

            <TextView
                android:id="@+id/ewallet_item_bank_card_list_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ewallet_color_333333"
                android:textSize="@dimen/pasc_text_size_17"/>

            <TextView
                android:id="@+id/ewallet_item_bank_card_list_subtitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="@color/ewallet_color_999999"
                android:textSize="@dimen/pasc_text_size_13"
                android:layout_marginTop="@dimen/ewallet_item_bank_card_subtitle_margin_top"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ewallet_vertical_split_height"
        android:background="@color/ewallet_primary_divider"
        android:layout_marginLeft="@dimen/ewallet_item_balance_list_padding_left"/>

</LinearLayout>
