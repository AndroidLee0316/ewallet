<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.pasc.business.ewallet.widget.toolbar.PascToolbar
        android:id="@+id/ewallet_bank_card_select_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ewallet_bank_card_select_tool_bar_height"
        android:background="@color/ewallet_white_bg"
        app:ewallet_title="@string/ewallet_withdraw_bank_card_select_title"
        app:ewallet_title_text_size="@dimen/ewallet_toolbar_title_text_size" />

    <com.pasc.business.ewallet.widget.NoRecycleListView
        android:id="@+id/ewallet_bank_card_select_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null" />

</LinearLayout>