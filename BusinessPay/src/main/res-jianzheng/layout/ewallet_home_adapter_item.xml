<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ewallet_btn_default_white_selector"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ewallet_home_item_ll"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ewallet_home_bg_ll"
            android:layout_width="match_parent"
            android:layout_height="89dp"

            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ewallet_home_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                tools:src="@drawable/ewallet_home_recharge_icon" />

            <TextView
                android:id="@+id/ewallet_home_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:textColor="@color/ewallet_color_333333"
                android:textSize="18sp"
                tools:text="充值" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ewallet_home_iconBg_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:layout_marginRight="11dp"
                tools:src="@drawable/ewallet_home_recharge_icon_bg" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>