<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/ewallet_bank_card_select_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ewallet_circle_uncheck" />
    <TextView
        android:id="@+id/ewallet_bank_card_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/ewallet_bank_card_select_iv"
        android:layout_centerVertical="true"
        android:textColor="@color/ewallet_color_333333"
        android:textSize="@dimen/pasc_text_size_17" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:background="#E8E8E8"/>
</RelativeLayout>
